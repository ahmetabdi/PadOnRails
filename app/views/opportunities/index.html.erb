<h1>Listing opportunities</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Status</th>
    <th>Sbustream</th>
    <th>Values</th>
    <th>Daiowner</th>
    <th>Estdescisiondate</th>
    <th>Companyname</th>
    <th>Contacts</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @opportunities.each do |opportunity| %>
  <tr>

    <td><%= opportunity.name %></td>
    <td><%= opportunity.status %></td>
    <td><%= opportunity.sbustream %></td>
    <td><%= opportunity.value %></td>
    <td><%= opportunity.daiowner %></td>
    <td><%= opportunity.estdescisiondate %></td>
    <td><%= opportunity.companyname %></td>
    <td><%= opportunity.contacts %></td>
    <td><%= link_to 'Show', opportunity %></td>
    <td><%= link_to 'Edit', edit_opportunity_path(opportunity) %></td>
    <td><%= link_to 'Destroy', opportunity, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

