<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
      <%= csrf_meta_tag %>
      <%= render 'layouts/stylesheets' %>
      <%= render 'layouts/javascripts'%>  
	</head>
	<body>
		<!-- Container for all the content on the page -->
		<div class="container header">
			<%= render 'layouts/header' %>
			<div class="maintitle">
				<div class="lefthead">
				<%= render 'layouts/logo' %>
				</div>
				<%= main_title %>
				<div class="righthead">
				PAD
				</div>
			</div>
		</div>
		<%= render 'layouts/errors'%> <!-- Get contents from pages -->
		<div class="container main">
		    <!-- Messages Blueprint => :error [red], :success [green], :info [blue] and :notice [yellow] -->
		    <%= yield %>
		</div>
	</body>
	<div class="container">
	<div id="bottom-menu">
		<!-- Debug information -->
		<!-- <%= debug(params) if Rails.env.development? %> -->
	</div>
	</div>
</html>